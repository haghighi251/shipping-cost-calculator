{%if message !="0"%}
    <div class="col-md-12 alert alert-warning"><ul>{{message|raw}}</ul></div> 
        {%endif%}
<div class="col-md-12"> 

    <form action="" method="post" enctype="multipart/form-data"> 

        <div class="control-group alert alert-success" style="margin-top: 15px;">
            <h2>Popup Setting's</h2>
            <div class="col-lg-6">
                <label for="inputEmail" class="control-label">Show Popup?</label>
                <div class="controls">
                    <input type="checkbox" name="active_popup" class="form-control" value="1" {{checked_status}}  />
                </div>
                <label for="inputEmail" class="control-label">Title</label>
                <div class="controls">
                    <input type="text" name="popup_title" class="form-control" value="{{popup_title}}"  />
                </div>
                <label for="inputEmail" class="control-label">Url</label>
                <div class="controls">
                    <input type="text" name="popup_url" class="form-control" value="{{popup_url}}"  />
                </div>
                <img src="{{popup_image}}" style="width: 500px;background-size: cover;" />
                <div class="row">
                    <div class="form-group col-md-3">
                        <label>Choose an image:</label>
                        <input type="file" name="popup_file"   />
                    </div>
                </div>
            </div>
        </div>  
        <input type="submit" class="btn btn-primary" style="background: #007bff !important;" name="popup_submit" value="Update" />
    </form>

</div>